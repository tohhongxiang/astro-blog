---
import BaseLayout from "@/layouts/base-layout.astro";
import Header from "@/components/header/index.astro";
import NoteItem from "@/components/note-item";
import { getCollection } from "astro:content";

const notes = (await getCollection("notes")).sort((a, b) => {
	return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});
---

<BaseLayout title="THX">
	<div class="mx-auto flex max-w-prose flex-col gap-12">
		<section class="px-4 pt-16">
			<Header
				title="THX's Notes"
				description="Notes from learning random stuff"
			/>
		</section>
		<section>
			<h2 class="mb-2 px-4 text-2xl font-bold">All Notes</h2>
			{notes.map((note) => <NoteItem note={note} />)}
		</section>
	</div>
</BaseLayout>
